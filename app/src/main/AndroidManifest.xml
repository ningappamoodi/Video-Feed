<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.videofeed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:name=".app.VideoFeedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.videofeed.app.view.VideoPlayerActivity"
            android:theme="@style/AppTheme.NoActionBar"
          android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode">
        </activity>
        <activity android:name="com.example.videofeed.app.view.VideoFeedActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>